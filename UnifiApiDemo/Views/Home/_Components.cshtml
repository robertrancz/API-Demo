@model IEnumerable<UnifiApiDemo.Models.ComponentViewModel>

<div class="panel-group" id="componentsAccordion" role="tablist" aria-multiselectable="true">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#componentsAccordion" href="#collapseComponents">Toggle Components</a>
            </h4>
        </div>
        <div id="collapseComponents" class="panel-collapse collapse">
            <div class="panel-body">
                <table class="table">
                    <thead>
                    <tr>
                        @*<th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        @*<th>
                                    @Html.DisplayNameFor(model => model.Comment)
                                </th>*@
                        @*<th>
                                    @Html.DisplayNameFor(model => model.Label)
                                </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.MonoisotopicMolarMass)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Charge)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Formula)
                        </th>
                        @*<th>
                                    @Html.DisplayNameFor(model => model.ParentId)
                                </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.ComponentStatus)
                        </th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @*<td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            @*<td>
                                        @Html.DisplayFor(modelItem => item.Comment)
                                    </td>*@
                            @*<td>
                                        @Html.DisplayFor(modelItem => item.Label)
                                    </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.MonoisotopicMolarMass)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Charge)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Formula)
                            </td>
                            @*<td>
                                        @Html.DisplayFor(modelItem => item.ParentId)
                                    </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.ComponentStatus)
                            </td>
                            @*<td>
                                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                                    </td>*@
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
